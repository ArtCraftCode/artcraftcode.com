.materials
  .comments
    %h2 materials
    %h3 Yarn
    %p
      %span.bold MC:
      Approximately {{pattern.mc_yards}} yards/{{pattern.mc_yards | ydToM}} meters aran weight yarn.
    %p
      %span.bold CC:
      Approximately {{pattern.cc_yards}} yards/{{pattern.cc_yards | ydToM}} meters aran weight yarn.

    %h3 Yarn Shown
    - pattern.yarns_shown.each do |yarn|
      %p
        - if yarn.label
          %span.bold #{yarn.label}:
        #{yarn.detail} in #{yarn.color}
    %h3 Needles
    - pattern.needles.each do |needle|
      %p
        - if needle.label
          %span.bold #{needle.label}:
        = needle.to_s
    %h3 Gauge
    %p
      = pattern.gauge
    %h3 Notions
    - pattern.notions.each do |notion|
      %p
        = notion
    - if pattern.sizes.length < 6
      -# TODO: MAKE THIS SMARTER!!!
      %h3 Finished sizes
      - pattern.sizes.each do |size|
        %p #{size.label}: #{size.measurements_string}
    %h3 Ravelry
    %a{ href: pattern.ravelry.link }
      %img.no-resize{ src: pattern.ravelry.button }
    %br
    %h4
      %a{ href: pattern.ravelry.link } View on Ravelry