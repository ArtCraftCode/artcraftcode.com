!!!
%html
  %head
    %meta{:charset => "utf-8"}
    / Always force latest IE rendering engine or request Chrome Frame
    %meta{:content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}
    / Use title if it's in the page YAML frontmatter
    %title= current_page.data.title || "artcraftcode.com"
    = stylesheet_link_tag "normalize", "app", "ngDialog.min", "inlineDisqussions"
    = javascript_include_tag  "all"
  %body{:class => page_classes}
    #container
      - if current_page.data.pattern == "very_pdx"
        #pattern(class="#{current_page.data.pattern}" ng-app="app")
          .sidebar-left
          = yield
          = partial(:footer)
      - else
        #pattern(class="#{current_page.data.pattern}")
          .sidebar-left
          = yield
          = partial(:footer)

    - if current_page.data.pattern == "very_pdx"
      %script{ src: 'javascripts/custom_patterns_app.js' }
    %script{src: "//use.typekit.net/ihj4klv.js"}
    %script 
      try{Typekit.load();}catch(e){}