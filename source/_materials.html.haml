.materials
  .section.comments
    %h2 materials
    .flex
      .cell
        %h3 Yarn
        - pattern.yarns.each do |yarn|
          %p
            - if yarn.label
              %span #{yarn.label} -
            Approximately #{yarn.yards} yards / #{yarn.meters} meters #{yarn.weight} weight yarn.
      .cell
        %h3 Yarn Shown
        - pattern.yarns_shown.each do |yarn|
          %p
            - if yarn.label
              %span #{yarn.label} -
            #{yarn.detail} in #{yarn.color}
      .cell
        %h3 Needles
        - pattern.needles.each do |needle|
          %p
            = needle.to_s
            - if needle.label
              %span - #{needle.label}
      .cell
        %h3 Gauge
        %p
          = pattern.gauge
      .cell
        %h3 Notions
        - pattern.notions.each do |notion|
          %p
            = notion
      - if pattern.sizes.length <= 3
        .cell
          %h3 Finished sizes
          - pattern.sizes.each do |size|
            %p #{size.label}: #{size.measurements_string}
    - if pattern.sizes.length >= 3
      %h3 Finished sizes
      .flex
        - pattern.sizes.each do |size|
          .cell
            %p #{size.label}: #{size.measurements_string}
