#patterns(ng-app='ng-app')
  .header
    h1
      span.text-teal art
      span.text-red craft
      span.text-orange code
    h2 Individual Patterns

  .content(ng-controller='PatternsCtrl')
    .flex-grid
      .cell(ng-repeat='pattern in patterns')
        a(ng-href='{{pattern.src}}')
          span.pattern-name {{pattern.name}}
          img.pattern-image(ng-src='{{pattern.image}}')